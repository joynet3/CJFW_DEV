<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>ServiceContents__c</field>
        <field>Category__c</field>
        <field>Region__c</field>
        <field>CustomerAgeGroup__c</field>
        <field>ApplicantsNumber__c</field>
        <field>ServiceStartDateTime__c</field>
        <field>fm_ServiceEndDateTime__c</field>
        <field>Address__c</field>
        <field>AddressDetail__c</field>
        <field>PostalCode__c</field>
        <field>Remark__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Instructor__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>승인 단계</label>
        <name>ApprovalProcess</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>ISNULL( Instructor__c ) &lt;&gt; True</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>UpdateStatusApproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>UpdateStatusRejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>UpdateStatusInProgress</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Extra Service Approval Process</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
