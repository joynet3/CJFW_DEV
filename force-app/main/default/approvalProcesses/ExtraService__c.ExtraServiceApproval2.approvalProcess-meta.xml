<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>ServiceContents__c</field>
        <field>Category__c</field>
        <field>Region__c</field>
        <field>CustomerAgeGroup__c</field>
        <field>ApplicantsNumber__c</field>
        <field>ServiceStartDateTime__c</field>
        <field>fm_ServiceEndDateTime__c</field>
        <field>Address__c</field>
        <field>AddressDetail__c</field>
        <field>PostalCode__c</field>
        <field>Remark__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Instructor2__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Instructor__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>승인단계</label>
        <name>InstructorApproval</name>
    </approvalStep>
    <emailTemplate>unfiled$public/ExtraServiceApprovalEmailTemplate</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>isblank(Instructor3__c)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ExtraServiceApproveActionEmail_2Instructor</name>
            <type>Alert</type>
        </action>
        <action>
            <name>UpdateStatus_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>ExtraServiceRejectedActionEmail_2Instructor</name>
            <type>Alert</type>
        </action>
        <action>
            <name>UpdateStatus_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>UpdateStatusIn_Progress</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Extra Service Approval Process2</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
