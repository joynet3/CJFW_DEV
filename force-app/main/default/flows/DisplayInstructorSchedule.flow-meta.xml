    </formulas>
    <formulas>
        <name>CurrentYear</name>
        <dataType>Number</dataType>
        <expression>Year (Today())</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <description>Get first day of given month</description>
        <name>FirstDayofMonth</name>
        <dataType>Date</dataType>
        <expression>IF(AND({!ExactMonth}={!CurrentMonth}, {!ChangeableYear}={!CurrentYear}), TODAY(), Date({!ChangeableYear}, {!ExactMonth}, 1))</expression>
    </formulas>
    <formulas>
        <description>Get last day of given month</description>
        <name>LastDayofMonth</name>
        <dataType>Date</dataType>
        <expression>Date({!ChangeableYear}, {!ExactMonth} + 1, 1) -1</expression>
    </formulas>
