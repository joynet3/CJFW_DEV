<aura:component implements="flexipage:availableForAllPageTypes,force:lightningQuickActionWithoutHeader,force:hasRecordId,force:hasSObjectName">
 <!-- 
     <aura:html tag="style">
         .slds-modal__container {
             margin: 0;
             display: block;
             padding: 0;
         }
         lightning-modal-body .slds-modal__content {
             height: calc(100vh - 115px);
             max-height: unset!important;
         }
         .slds-modal__content.slds-p-around- -medium {
             padding: 0 !important;
             
             height: initial !important;
             max-height: initial !important;
         }
         .slds-modal__content.slds-p-around- -medium  .cuf-content {
             padding: 0 !important;
         }
         
         .cuf-content .bodyWrapper {
             padding:0 !important;
         }
         c-cjfw-survey-modal {
             margin:0;
             padding:0;
         }
         div:has(c-cjfw-survey-modal) {
             padding:0 !important;
             margin:0 !important;
         }
     
     
     </aura:html>
  -->
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="sObjectName" type="String" />
    
    <aura:if isTrue="{!$Browser.formFactor == 'DESKTOP'}">
        
         <aura:html  tag="style">

            .quick-actions-panel > .slds-modal__content {
                padding: 0 !important;
                height: initial !important;
                max-height: initial !important;
            }

            .quick-actions-panel > .slds-modal__content .forceChatterBasePublisher :not(.PHONE) .cuf-content {
                padding: 0 !important;
            }

            c-cjfw-survey-modal lightning-modal-body > .slds-modal__content {
                max-height: calc(750px - 250px);
            }

        </aura:html>
        <aura:set attribute="else">
            <aura:html tag="style">
                .slds-modal__container {
                    margin: 0;
                    display: block;
                    padding: 0;
                }
                lightning-modal-body .slds-modal__content {
                    height: calc(100vh - 115px);
                    max-height: unset!important;
                }
                .slds-modal__content.slds-p-around- -medium {
                    padding: 0 !important;
                    
                    height: initial !important;
                    max-height: initial !important;
                }
                .slds-modal__content.slds-p-around- -medium  .cuf-content {
                    padding: 0 !important;
                }
                
                .cuf-content .bodyWrapper {
                    padding:0 !important;
                }
                c-cjfw-survey-modal {
                    margin:0;
                    padding:0;
                }
                div:has(c-cjfw-survey-modal) {
                    padding:0 !important;
                    margin:0 !important;
                }
            
            
            </aura:html>
        </aura:set>
    </aura:if>

    

    <c:cjfwSurveyModal parentType="aura" size="large" recordId="{!v.recordId}" objectApiName="{!v.sObjectName}"></c:cjfwSurveyModal>

    <lightning:messageChannel type="quikActionMsgCh__c"
        aura:id="quickActionChannel" 
        onMessage="{!c.handleChanged}" scope="APPLICATION"
    />

</aura:component>