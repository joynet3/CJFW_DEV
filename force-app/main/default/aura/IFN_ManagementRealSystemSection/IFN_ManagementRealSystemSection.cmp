            <lightning:accordion
                allowMultipleSectionsOpen="false"
                activeSectionName="{! v.ActiveSections }"
            >
            <aura:if isTrue="{!not(empty(v.exampleSectionParams1))}" >
                <aura:iteration items="{!v.exampleSectionParams1}" var="data">
                    <c:IFN_ManagementRealExampleSection Param="{!data}" />
                </aura:iteration>
            </aura:if>
            </lightning:accordion>
        </lightning:tab>
