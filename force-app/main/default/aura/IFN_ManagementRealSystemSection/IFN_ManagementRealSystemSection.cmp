<aura:component>
    <!--Component parameter-->
    <aura:attribute name="Param"  type="Object" />

    <aura:attribute name="name"  type="String" default="" />
    <aura:attribute name="label" type="String" default="" />
    
    <aura:attribute name="ActiveSections"       type="List" default="" />
    <aura:attribute name="exampleSectionParams1" type="Object" default="{}" />
    <aura:attribute name="exampleSectionParams2" type="Object" default="{}" />
    <aura:attribute name="exampleSectionParams3" type="Object" default="{}" />
    <aura:attribute name="exampleSectionParams4" type="Object" default="{}" />
