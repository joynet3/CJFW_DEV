                                    <div id="PV_TELF1__c" class="required-block">
                                        <p class="required-mark">*</p>
                                        <lightning:inputField fieldName="PV_TELF1__c" value="{!v.objCustomer.PV_TELF1__c}" aura:id="PV_TELF1__c" onchange="{!c.onInputPhone}"/>
