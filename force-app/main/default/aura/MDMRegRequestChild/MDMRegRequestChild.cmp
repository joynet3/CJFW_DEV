                                    <div id="PV_J_1KFREPRE__c" class="required-block">
                                        <p class="required-mark">*</p>
                                        <lightning:inputField class="required-input" fieldName="PV_J_1KFREPRE__c" value="{!v.objCustomer.PV_J_1KFREPRE__c}" aura:id="PV_J_1KFREPRE__c"/>
