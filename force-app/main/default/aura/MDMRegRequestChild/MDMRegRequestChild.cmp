                                        label="영업그룹"
                                        id="{!v.objCustomer.PV_VKGRP_lu__c}"
                                        value="{!v.objCustomer.PV_VKGRP__c}"
                                        inputText="{!v.inputpv_vkgrp}"
                                        isRequired="true"
                                        isDisabled="false"
                                        isError="{!if(AND(v.isShowError, OR(v.objCustomer.PV_VKGRP__c == '', v.objCustomer.PV_VKGRP__c == null)), true, false)}"
