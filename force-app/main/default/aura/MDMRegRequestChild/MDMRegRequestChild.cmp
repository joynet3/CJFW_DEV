    <aura:attribute name="listItems" type="list" default="['3194-001','3208-001','3209-001','3210-001','3211-001',
                                                           '3212-001','3213-001','3214-001','3215-001','3216-001', 
                                                           '3217-001','3218-001','3219-001','3220-001','3221-001',
