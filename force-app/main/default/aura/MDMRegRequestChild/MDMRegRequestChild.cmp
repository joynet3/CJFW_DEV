                        <lightning:button variant="brand"   label="저장" onclick="{!c.fnAddressSave}" />
                    </footer>

                    <aura:set attribute="else">
                        <footer class="slds-modal__footer">
                            <lightning:button variant="neutral" label="취소" onclick="{!c.fnSearchClose}" />
                        </footer>
                    </aura:set>
                </aura:if>
            </div>
        </section>

